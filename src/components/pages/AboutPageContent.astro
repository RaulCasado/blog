<style>
    /* About page styles */
    .about-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .about-personal-intro h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: hsl(var(--foreground));
    }

    .about-description {
        font-size: 1.05rem;
        line-height: 1.7;
        color: hsl(var(--muted-foreground));
        margin-bottom: 1.5rem;
    }
    
    /* Metrics section */
    .about-metrics {
        background-color: hsl(var(--card));
        border-radius: var(--radius);
        padding: 1.5rem;
        margin: 2.5rem 0;
        border: 1px solid hsl(var(--border));
    }
    
    .about-metrics-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .about-metric-item {
        text-align: center;
    }
    
    .about-metric-value {
        font-size: 2rem;
        font-weight: 700;
        color: hsl(var(--foreground));
        margin-bottom: 0.25rem;
    }
    
    .about-metric-label {
        font-size: 0.875rem;
        color: hsl(var(--muted-foreground));
    }
    
    /* Tech badges section */
    .about-studying-section,
    .about-philosophy,
    .about-personal-section,
    .about-links-section {
        margin: 2.5rem 0;
    }
    
    .about-studying-section h3,
    .about-philosophy h3,
    .about-personal-section h3,
    .about-links-section h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: hsl(var(--foreground));
    }
    
    .about-tech-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    
    .about-tech-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        background-color: hsl(var(--muted)/0.5);
        color: hsl(var(--foreground));
        font-size: 0.75rem;
        padding: 0.375rem 0.75rem;
        border-radius: 9999px;
        border: 1px solid hsl(var(--border));
    }
    
    /* Links section */
    .about-link {
        color: hsl(var(--primary));
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
    }
    
    .about-link:hover {
        color: hsl(var(--primary-foreground));
        text-decoration: underline;
    }
    
    /* Responsive design */
    @media (min-width: 768px) {
        .about-metrics-grid {
            grid-template-columns: repeat(4, 1fr);
        }
        
        .about-personal-intro h2 {
            font-size: 3rem;
        }
    }
</style>
