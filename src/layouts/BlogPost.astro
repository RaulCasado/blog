---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import TableOfContents from '../components/TableOfContents.astro';

type Props = CollectionEntry<'blog'>['data'] & {
  headings?: {
    depth: number;
    slug: string;
    text: string;
  }[];
};

const { title, description, pubDate, updatedDate, heroImage, headings = [] } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.blog-content-wrapper {
				display: grid;
				grid-template-columns: 1fr;
				gap: 2rem;
				max-width: 1200px;
				margin: 2rem auto 0;
				padding: 0 1rem;
			}
			
			.toc-placeholder {
				margin-top: 2rem;
			}
			
			/* Shared styles for both blog content and regular pages */
			.prose {
				width: 100%;
				color: rgb(var(--gray-dark));
			}
			
			/* Blog-specific prose style */
			.blog-content-wrapper .prose {
				max-width: 720px;
				margin: auto;
				padding: 1em;
			}
			
			/* Standard page style (base container for non-blog pages) */
			.standard-page {
				max-width: 100%; /* Allow child containers to define their own max-width */
				margin: 0 auto;
				padding: 0;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			
			/* Responsive adjustments */
			@media (min-width: 1024px) {
				.blog-content-wrapper {
					grid-template-columns: 250px 1fr;
					align-items: start;
				}
				
				.toc-placeholder {
					position: sticky;
					top: 2rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				
				{/* Check if headings exist - use blog layout with TOC sidebar */}
				{headings && headings.length > 0 ? (
					<div class="blog-content-wrapper">
						<div class="toc-placeholder">
							<TableOfContents title="Tabla de contenidos" headings={headings} />
						</div>
						<div class="prose">
							<div class="title">
								<div class="date">
									<FormattedDate date={pubDate} />
									{
										updatedDate && (
											<div class="last-updated-on">
												Last updated on <FormattedDate date={updatedDate} />
											</div>
										)
									}
								</div>
								<h1>{title}</h1>
								<hr />
							</div>
							<slot />
						</div>
					</div>
				) : (
					/* Standard layout for pages without headings (about, portfolio, etc.) */
					<div class="prose standard-page">
						<div class="title">
							{pubDate && (
								<div class="date">
									<FormattedDate date={pubDate} />
									{
										updatedDate && (
											<div class="last-updated-on">
												Last updated on <FormattedDate date={updatedDate} />
											</div>
										)
									}
								</div>
							)}
							<h1>{title}</h1>
							{title && <hr />}
						</div>
						<slot />
					</div>
				)}
			</article>
		</main>
		<Footer />
	</body>
</html>
