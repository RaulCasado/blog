---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import TableOfContents from '../components/TableOfContents.astro';
import SocialShare from '../components/SocialShare.astro';
import { getLangFromUrl } from '../i18n/utils';

type Props = CollectionEntry<'blog'>['data'] & {
  headings?: {
    depth: number;
    slug: string;
    text: string;
  }[];
};

const { title, description, pubDate, updatedDate, heroImage, headings = [] } = Astro.props;
const currentPageUrl = Astro.url.href;
const lang = getLangFromUrl(Astro.url);
---

<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			html {
				overflow: visible;
			}
			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding: 0;
			}
			.hero-image {
				width: 100%;
				padding: 0 0.75rem;
				margin: 0.75rem 0;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				max-width: 100%;
				height: auto;
				object-fit: cover;
				aspect-ratio: 2/1;
			}
			.blog-content-wrapper {
				display: grid;
				grid-template-columns: 1fr;
				gap: 0.75rem;
				max-width: 100%;
				margin: 0.75rem auto 0;
				padding: 0 0.5rem;
				width: 100%;
				overflow-x: hidden;
			}
			
			.toc-placeholder {
				margin-top: 0.5rem;
				width: 100%;
				order: 1;
			}
			
			.prose {
				width: 100%;
				color: hsl(var(--foreground));
				font-size: 0.9375rem;
				line-height: 1.6;
				overflow-x: hidden;
				word-wrap: break-word;
				hyphens: auto;
				order: 0;
			}
			
			.blog-content-wrapper .prose {
				max-width: 100%;
				margin: auto;
				padding: 0.5rem;
			}
			
			.standard-page {
				max-width: 100%;
				margin: 0 auto;
				padding: 0 0.75rem;
			}
			.title {
				margin-bottom: 0.75em;
				padding: 0.5em 0;
				text-align: center;
				line-height: 1.2;
				width: 100%;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				font-size: 1.5rem;
				word-break: break-word;
				hyphens: auto;
			}
			.date {
				margin-bottom: 0.5em;
				color: hsl(var(--muted-foreground));
				font-size: 0.875rem;
			}
			.last-updated-on {
				font-style: italic;
			}
			
			.prose :global(pre) {
				overflow-x: auto;
				border-radius: 0.375rem;
				padding: 1rem;
				white-space: pre;
				word-wrap: normal;
				margin: 1rem 0;
				max-width: 100%;
				font-size: 0.875rem;
			}
			
			.prose :global(code) {
				font-family: monospace;
				white-space: pre-wrap;
				word-break: break-word;
				font-size: 0.875rem;
			}
			
			.prose :global(p) {
				margin-bottom: 1rem;
				width: 100%;
			}
			
			.prose :global(img) {
				max-width: 100%;
				height: auto;
				margin: 1rem auto;
				display: block;
			}
			
			.prose :global(table) {
				width: 100%;
				border-collapse: collapse;
				margin: 1rem 0;
				font-size: 0.875rem;
				overflow-x: auto;
				display: block;
			}
			
			.prose :global(table th),
			.prose :global(table td) {
				border: 1px solid hsl(var(--border));
				padding: 0.5rem;
				text-align: left;
			}
			
			.prose :global(blockquote) {
				border-left: 4px solid hsl(var(--primary));
				padding-left: 1rem;
				margin-left: 0;
				font-style: italic;
			}
			
			.prose :global(table) {
				display: block;
				overflow-x: auto;
				white-space: nowrap;
				-webkit-overflow-scrolling: touch;
			}
			
			@media (min-width: 480px) {
				.title h1 {
					font-size: 1.75rem;
				}
				
				.hero-image {
					padding: 0 1rem;
				}
				
				.prose {
					font-size: 1rem;
				}
			}
			
			@media (min-width: 640px) {
				.title h1 {
					font-size: 2rem;
				}
				
				.hero-image {
					padding: 0 1.5rem;
				}
				
				.blog-content-wrapper {
					padding: 0 1rem;
					gap: 1.25rem;
				}
				
				.blog-content-wrapper .prose {
					padding: 0.75rem;
				}
				
				.prose {
					font-size: 1.0625rem;
				}
				
				.prose :global(table) {
					white-space: normal;
				}
			}
			
			@media (min-width: 768px) {
				.blog-content-wrapper {
					max-width: 90%;
					margin: 1.5rem auto 0;
					padding: 0 1.5rem;
				}
				
				.blog-content-wrapper .prose {
					max-width: 95%;
					padding: 1em;
				}
				
				.title h1 {
					font-size: 2.25rem;
				}
				
				.toc-placeholder {
					order: 0;
				}
				
				.prose {
					order: 1;
				}
			}
			
			@media (min-width: 1024px) {
				.blog-content-wrapper {
					grid-template-columns: 250px 1fr;
					align-items: start;
					max-width: 1200px;
					gap: 2rem;
					margin: 2rem auto 0;
					overflow: visible;
				}
				
				.blog-content-wrapper .prose {
					max-width: 720px;
				}
				
				.toc-placeholder {
					position: sticky;
					top: 2rem;
					height: fit-content;
					max-height: calc(100vh - 4rem);
					overflow-y: auto;
					align-self: start;
				}
				
				.title h1 {
					font-size: 2.5rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt={title} />}
				</div>
				
				{headings && headings.length > 0 ? (
					<div class="blog-content-wrapper">
						<div class="toc-placeholder">
							<TableOfContents title="Tabla de contenidos" headings={headings} />
						</div>
						<div class="prose">
							<div class="title">
								<div class="date">
									<FormattedDate date={pubDate} />
									{
										updatedDate && (
											<div class="last-updated-on">
												Última actualización <FormattedDate date={updatedDate} />
											</div>
										)
									}
								</div>
								<h1>{title}</h1>
								<hr />
							</div>
							<slot />

                            <SocialShare url={currentPageUrl} title={title} description={description} />

                            <!-- Comments section -->
                            <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid hsl(var(--border));">
                                <script src="https://giscus.app/client.js"
                                        data-repo="RaulCasado/blog"
                                        data-repo-id="R_kgDOOseBOw"
                                        data-category="General"
                                        data-category-id="DIC_kwDOOseBO84CvjDa"
                                        data-mapping="pathname"
                                        data-strict="0"
                                        data-reactions-enabled="1"
                                        data-emit-metadata="0"
                                        data-input-position="bottom"
                                        data-theme="preferred_color_scheme"
                                        data-lang="es"
                                        data-loading="lazy"
                                        crossorigin="anonymous"
                                        async>
                                </script>
                            </div>
						</div>
					</div>
				) : (
					<div class="prose standard-page">
						<div class="title">
							{pubDate && (
								<div class="date">
									<FormattedDate date={pubDate} />
									{
										updatedDate && (
											<div class="last-updated-on">
												Última actualización <FormattedDate date={updatedDate} />
											</div>
										)
									}
								</div>
							)}
							<h1>{title}</h1>
							{title && <hr />}
						</div>
						<slot />

                        <!-- Comments section -->
                        <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid hsl(var(--border));">
                            <script src="https://giscus.app/client.js"
                                    data-repo="RaulCasado/blog"
                                    data-repo-id="R_kgDOOseBOw"
                                    data-category="General"
                                    data-category-id="DIC_kwDOOseBO84CvjDa"
                                    data-mapping="pathname"
                                    data-strict="0"
                                    data-reactions-enabled="1"
                                    data-emit-metadata="0"
                                    data-input-position="bottom"
                                    data-theme="preferred_color_scheme"
                                    data-lang="es"
                                    data-loading="lazy"
                                    crossorigin="anonymous"
                                    async>
                            </script>
                        </div>
					</div>
				)}
			</article>
		</main>
		<Footer />
	</body>
</html>
